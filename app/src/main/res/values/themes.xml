<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestApp_Innowise" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/choose</item>
        <item name="colorPrimaryVariant">@color/choose</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/choose</item>
        <item name="colorSecondaryVariant">@color/colorBackground</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="android:editTextColor">#1E1E1E</item>
        <item name="android:textColorHint">#868686</item>
        <item name="android:windowFullscreen">false</item>
    </style>
    <style name="Theme.PexelsApp.Splash" parent="Theme.SplashScreen">
        <!-- Укажи иконку для splash -->
        <item name="windowSplashScreenBackground">@color/choose</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.TestApp_Innowise</item>
    </style>
</resources>